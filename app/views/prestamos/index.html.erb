<p id="notice"><%= notice %></p>

<h1>Prestamos</h1>
<!--<%= link_to 'Nuevo Prestamo', new_prestamo_path %> -->

<div class="text-right mb-3 mr-3">

<%= button_to  new_prestamo_path, class: "btn btn-info",method: :get  do %>
<i class="fas fa-plus">Nuevo Prestamo</i>
<% end %>
</div>



<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
    <th scope="col">No</th>
      <th scope="col">Fecha</th>
      <th scope="col">Estado</th>
      <th scope="col">Usuario</th>
      <th scope="col" > <span style="padding-left:30%">Accion</span></th>
    </tr>
  </thead>

  <tbody>
    <% @prestamos.each do |prestamo| %>
      <tr>
      <th scope="row"><%= prestamo.id %></th>
        <td><%= prestamo.fecha %></td>
     <!--   <td><%= prestamo.estado %></td> -->
        <td> <%= check_box_tag "prestamo", prestamo.estado,  prestamo.estado ,:disabled => true %></td>
       
        <td><%= prestamo.Usuario.id.to_s+"-"+prestamo.Usuario.nombres %></td>

      <!--  <td><%= link_to 'Show', prestamo %>   </td>
        <td><%= link_to 'Edit', edit_prestamo_path(prestamo) %></td>
        <td><%= link_to 'Destroy', prestamo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
-->

 <td  style="padding-left:5%">

  <%= link_to prestamo , style: 'color: var(--blue); margin-right:5%' do %>
    <i class="fas fa-info-circle fa-3x blue"></i>
    <% end %>

 
 <%= link_to edit_prestamo_path(prestamo), style: 'color: var(--yellow) ; margin-right:5%' do %>
 <i class="fas fa-pen-square fa-3x yellow "></i>
 <% end %>
 
 <%= link_to  prestamo, method: :delete, data: { confirm: 'Are you sure?' } , style: 'color: var(--red)' do %> 
  <i class="fas fa-minus-square fa-3x"></i>  
  <% end %>
  </td>

 </tr>
    <% end %>
  </tbody>
</table>

